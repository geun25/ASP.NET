@*model string[]*@
@model IList<string>

@{
    ViewBag.Title = "Names";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Names</h2>
@*if(Model.Length == 0)*@
@if(Model.Count == 0)
{
    using (Html.BeginForm())
    {
        for (int i = 0; i < 3; i++)
        {
        <div><label>@(i + 1)번: </label>@Html.TextBox("names")</div>
        }
        <button type="submit">확인</button>
    }
}
else
{
    foreach(string str in Model) {
        <p>@str</p>
    }

    @Html.ActionLink("뒤로", "Names");
}
