@using ModelBindDemo.Models
@model IList<AddressSimple>
@{
    ViewBag.Title = "Address";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Simple 주소</h2>
@if (Model.Count() == 0)
{
    using (Html.BeginForm())
    {
        for (int i = 0; i < 3; i++)
        {
            <fieldset>
                <legent>주소 @(i+1) :</legent>
                <div><label>거주 도시 : </label>@Html.Editor("[" + i + "].City")</div>
                <div><label>거주 국가 : </label>@Html.Editor("[" + i + "].Country")</div>
            </fieldset>
        }
        <button type="submit">확인</button>
    }
}
else
{
    foreach(AddressSimple str in Model)
    {
        <p>@str.City, @str.Country</p>
    }
    @Html.ActionLink("뒤로", "Address");
}

